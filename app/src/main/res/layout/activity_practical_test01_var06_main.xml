<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Trei cÃ¢mpuri de text editabil -->
    <EditText
        android:id="@+id/numar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numar 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/numar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numar 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/numar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numar 3"
        android:inputType="number" />

    <!-- Trei checkbox-uri -->
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkbox 1" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkbox 2" />

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkbox 3" />

    <!-- Butonul Play centrat orizontal -->
    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
